@{
    Layout = "_Layout";
    ViewData["Title"] = "About";
}

<!-- Hero Section -->
<section class="about-hero position-relative text-center text-white py-5" style="background: linear-gradient(135deg, #4e54c8 0%, #8f94fb 100%); overflow: hidden;">
    <div id="about-hero-particles" class="position-absolute w-100 h-100" style="top:0; left:0;"></div>
    <div class="container position-relative" data-aos="fade-up">
        <h1 class="display-4 fw-bold mb-3">About TalentLink</h1>
        <p class="lead mb-4">Connecting talent with opportunities seamlessly. Your career, your way.</p>
        <a href="/Home/Register" class="btn btn-gradient btn-lg">Get Started</a>
    </div>
</section>

<!-- Mission & Vision -->
<section class="py-5" style="background: #f8f9fa;">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-md-6" data-aos="fade-right">
                <div class="p-5 rounded-5 shadow-lg text-center" style="background: rgba(255, 229, 255, 0.7);">
                    <i class="fas fa-bullseye fa-4x mb-3" style="color:#d63384;"></i>
                    <h3 class="fw-bold mb-2" style="color:#6f42c1;">Our Mission</h3>
                    <p style="color:#343a40;">
                        Bridge the gap between companies and talent with a seamless, trustworthy platform.
                    </p>
                </div>
            </div>
            <div class="col-md-6" data-aos="fade-left">
                <div class="p-5 rounded-5 shadow-lg text-center" style="background: rgba(225, 245, 255, 0.7);">
                    <i class="fas fa-eye fa-4x mb-3" style="color:#0d6efd;"></i>
                    <h3 class="fw-bold mb-2" style="color:#0d6efd;">Our Vision</h3>
                    <p style="color:#343a40;">
                        Empower professionals and companies to grow together with innovative solutions.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Features / Why Choose Us -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5" data-aos="fade-up">Why Choose TalentLink?</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card shadow-lg border-0 h-100 feature-card text-center p-5 rounded-4">
                    <i class="fas fa-building fa-3x mb-3 text-gradient"></i>
                    <h5 class="fw-bold mb-2">Top Companies</h5>
                    <p class="text-muted">Access innovative companies actively hiring fresh talent.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card shadow-lg border-0 h-100 feature-card text-center p-5 rounded-4">
                    <i class="fas fa-user-check fa-3x mb-3 text-gradient"></i>
                    <h5 class="fw-bold mb-2">Verified Profiles</h5>
                    <p class="text-muted">Ensure trust with verified candidate and company profiles.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card shadow-lg border-0 h-100 feature-card text-center p-5 rounded-4">
                    <i class="fas fa-rocket fa-3x mb-3 text-gradient"></i>
                    <h5 class="fw-bold mb-2">Fast Application</h5>
                    <p class="text-muted">Apply instantly and track applications with ease.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Our Focus / Current Goals -->
<section class="py-5" style="background-color: #fff3f8;">
    <div class="container">
        <h2 class="text-center fw-bold mb-5" data-aos="fade-up" style="color:#6f42c1;">Our Focus in 2025</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up">
                <div class="p-5 shadow-lg rounded-4 text-center h-100" style="background: rgba(255, 230, 245, 0.7);">
                    <i class="fas fa-network-wired fa-3x mb-3" style="color:#d63384;"></i>
                    <h5 class="fw-bold mb-2" style="color:#6f42c1;">Grow Network</h5>
                    <p style="color:#343a40;">Connect fresh talents with companies across industries.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="p-5 shadow-lg rounded-4 text-center h-100" style="background: rgba(230, 245, 255, 0.7);">
                    <i class="fas fa-cogs fa-3x mb-3" style="color:#0d6efd;"></i>
                    <h5 class="fw-bold mb-2" style="color:#0d6efd;">Enhance Experience</h5>
                    <p style="color:#343a40;">Provide an intuitive platform with fast applications and verified profiles.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="p-5 shadow-lg rounded-4 text-center h-100" style="background: rgba(245, 240, 255, 0.7);">
                    <i class="fas fa-lightbulb fa-3x mb-3" style="color:#6f42c1;"></i>
                    <h5 class="fw-bold mb-2" style="color:#6f42c1;">Innovate</h5>
                    <p style="color:#343a40;">Leverage technology and design to create a seamless experience.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-5" data-aos="fade-up">What Users Say</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="testimonial-card p-4 shadow-lg rounded-4 text-center h-100">
                    <p class="text-muted fst-italic">"TalentLink made my job search effortless. I got hired within a month!"</p>
                    <h6 class="fw-bold mt-3">– Tanjila Broti</h6>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="testimonial-card p-4 shadow-lg rounded-4 text-center h-100">
                    <p class="text-muted fst-italic">"The verified company profiles gave me confidence to apply."</p>
                    <h6 class="fw-bold mt-3">– Shurid Abraar</h6>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="testimonial-card p-4 shadow-lg rounded-4 text-center h-100">
                    <p class="text-muted fst-italic">"Fast application and easy tracking — I love this platform."</p>
                    <h6 class="fw-bold mt-3">– Sanjida Amin</h6>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- JS Animations -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <script>
        particlesJS("about-hero-particles", {
          "particles": {
            "number": { "value": 40 },
            "size": { "value": 3 },
            "color": { "value": "#ffffff" },
            "line_linked": { "enable": true, "distance": 120, "color": "#ffffff", "opacity": 0.2, "width": 1 },
            "move": { "speed": 1 }
          }
        });
        AOS.init({ duration: 1200, once: true });
    </script>
}
