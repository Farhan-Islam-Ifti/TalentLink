@model TalentLink.Controllers.RecommendedJobsVM

<div class="card recommended-jobs-card gradient-card mb-4 animated-card">
    <div class="card-header gradient-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0"><i class="fas fa-magic me-2"></i>Recommended Jobs For You</h5>
        <span class="badge bg-success">Personalized</span>
    </div>
    <div class="card-body">
        <div class="row">
            @if (Model.Jobs == null || !Model.Jobs.Any())
            {
                <div class="col-12 text-center py-4">
                    <i class="fas fa-briefcase fa-3x mb-3"></i>
                    <p>No recommendations yet. Try adding skills to your profile!</p>
                    <a class="modern-btn btn-gradient mt-2" asp-controller="JobSeeker" asp-action="EditProfile">
                        <i class="fas fa-user-edit me-1"></i> Update Skills
                    </a>
                </div>
            }
            else
            {
                foreach (var job in Model.Jobs)
                {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card job-card-modern gradient-card shadow-lg animated-card soft-card h-100 position-relative">
                    <span class="badge bg-success position-absolute top-0 end-0 m-2">Recommended</span>
                    <div class="card-body d-flex flex-column">
                        <h6 class="fw-bold">@job.Title</h6>
                        <p class="mb-2 text-muted"><i class="fas fa-building me-1"></i>@job.Company?.CompanyName</p>

                        @functions {
                            string JobTypeClass(JobType jt) => jt switch
                            {
                                JobType.FullTime => "bg-success",
                                JobType.PartTime => "bg-primary",
                                JobType.Internship => "bg-warning text-dark",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @JobTypeClass(job.JobType) mb-2 px-3 py-1">
                            <i class="bi bi-briefcase-fill me-1"></i>@job.JobType
                        </span>

                        <p class="small flex-grow-1">
                            @(job.Description?.Length > 120 ? job.Description.Substring(0, 120) + "..." : job.Description)
                        </p>

                        <div class="job-details small mb-3">
                            <i class="fas fa-map-marker-alt me-1"></i>@job.Location<br />
                            @if (job.Salary.HasValue)
                            {
                                <i class="fas fa-money-bill-wave me-1"></i>
                                @job.Salary.Value.ToString("C")

                                <br />
                            }
                            <i class="fas fa-clock me-1"></i>@job.DeadlineDate?.ToString("MMM dd, yyyy")
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <a class="modern-btn btn-gradient btn-animated btn-sm"
                               asp-controller="JobPostingMvc" asp-action="Details" asp-route-id="@job.Id">
                                <i class="fas fa-eye me-1"></i> View Job
                            </a>

                            @{
                                var hasApp = Model.ApplicationsByJobId.TryGetValue(job.Id, out var appId);
                            }
                            @if (hasApp)
                            {
                                <a class="application-badge"
                                   asp-controller="JobApplicationMvc" asp-action="Details" asp-route-id="@appId">
                                    <i class="fas fa-check me-1"></i>View Application
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
                        }
                        }
        </div>
    </div>
</div>
