@model TalentLink.Models.JobPosting
@{
    ViewData["Title"] = "Job Details";
    var isCompanyOwner = ViewBag.IsCompanyOwner as bool? ?? false;
}

<div class="container mt-4 animate-fadeIn">
    <div class="row">
        <div class="col-md-8">
            <!-- Job Header -->
            <div class="card mb-4 shadow job-card animate-fadeInUp">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 class="card-title text-gradient">@Model.Title</h2>
                            <h5 class="text-primary">@Model.Company?.CompanyName</h5>
                            <p class="text-muted mb-0">@Model.Location</p>
                        </div>
                        <span class="badge bg-gradient text-black fs-6">@Model.JobType</span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1">
                                <i class="fas fa-calendar text-muted me-2"></i>
                                <strong>Posted:</strong> @Model.PostedDate.ToString("MMM dd, yyyy")
                            </p>
                            <p class="mb-1">
                                <i class="fas fa-clock text-muted me-2"></i>
                                <strong>Deadline:</strong> @Model.DeadlineDate?.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                        <div class="col-md-6">
                            @if (Model.Salary.HasValue)
                            {
                                <p class="mb-1">
                                    <i class="fas fa-money-bill-wave text-muted me-2"></i>
                                    <strong>Salary:</strong> @Model.Salary.Value.ToString("C")
                                </p>
                            }
                        </div>
                    </div>

                    @if (isCompanyOwner)
                    {
                        <div class="d-flex gap-2 mt-3">
                            <a href="@Url.Action("Edit", "JobPostingMvc", new { id = Model.Id })" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit me-1"></i>Edit Job
                            </a>
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this job posting?')">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>

            <!-- Job Description -->
            <div class="card mb-4 shadow-sm animate-fadeInUp">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Job Description</h5>
                </div>
                <div class="card-body">
                    <div class="job-content">
                        @Html.Raw(Model.Description.Replace("\n", "<br>"))
                    </div>
                </div>
            </div>

            <!-- Requirements -->
            <div class="card mb-4 shadow-sm animate-fadeInUp">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Requirements</h5>
                </div>
                <div class="card-body">
                    <div class="job-content">
                        @Html.Raw(Model.Requirements.Replace("\n", "<br>"))
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Company Info -->
            <div class="card mb-4 shadow-sm animate-fadeInUp">
                <div class="card-header bg-gradient text-white">
                    <h5 class="mb-0"><i class="fas fa-building me-2"></i>Company Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="company-icon bg-light rounded-circle d-inline-flex align-items-center justify-content-center pulse"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-building fa-2x text-gradient"></i>
                        </div>
                        <h5 class="mt-2">@Model.Company?.CompanyName</h5>
                    </div>

                    <div class="company-details">
                        @if (!string.IsNullOrEmpty(Model.Company?.Industry))
                        {
                            <p class="mb-2">
                                <i class="fas fa-industry text-muted me-2"></i>
                                <strong>Industry:</strong> @Model.Company.Industry
                            </p>
                        }

                        @if (!string.IsNullOrEmpty(Model.Company?.Website))
                        {
                            <p class="mb-2">
                                <i class="fas fa-globe text-muted me-2"></i>
                                <strong>Website:</strong>
                                <a href="@Model.Company.Website" target="_blank">@Model.Company.Website</a>
                            </p>
                        }

                        @if (!string.IsNullOrEmpty(Model.Company?.Address))
                        {
                            <p class="mb-2">
                                <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                <strong>Address:</strong> @Model.Company.Address
                            </p>
                        }

                        @if (!string.IsNullOrEmpty(Model.Company?.Description))
                        {
                            <div class="mt-3">
                                <strong>About Company:</strong>
                                <p class="text-muted">@Model.Company.Description</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Application Action -->
            <div class="card shadow-sm animate-fadeInUp">
                <div class="card-header bg-gradient text-white">
                    <h5 class="mb-0"><i class="fas fa-briefcase me-2"></i>Apply for this Job</h5>
                </div>
                <div class="card-body text-center">
                    <p class="card-text">Interested in this position? Apply now!</p>
                    <a href="@Url.Action("Apply", "JobApplicationMvc", new { jobPostingId = Model.Id })"
                       class="btn btn-gradient w-100">
                        <i class="fas fa-paper-plane me-1"></i>Apply Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* === Theme Colors === */
    .bg-gradient {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .text-gradient {
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-gradient {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: #fff;
        border: none;
        transition: all 0.3s ease;
        border-radius: 8px;
        padding: 10px 20px;
    }

        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(118,75,162,0.3);
        }

    /* === Cards === */
    .card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.15);
        }

    .card-header {
        font-weight: 600;
    }

    /* === Job Content === */
    .job-content {
        line-height: 1.7;
        font-size: 1.05rem;
        color: #444;
    }

    /* === Animations === */
    .animate-fadeIn {
        animation: fadeIn 0.8s ease-in-out;
    }

    .animate-fadeInUp {
        animation: fadeInUp 1s ease-in-out;
    }

    .pulse {
        animation: pulse 2s infinite;
    }

    /* === Keyframes === */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
    @@keyframes pulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    }
</style>
