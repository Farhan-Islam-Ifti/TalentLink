@model IEnumerable<JobApplication>
@{
    ViewData["Title"] = "Company Applications";
    var jobPostings = ViewBag.JobPostings as List<JobPosting> ?? new List<JobPosting>();
    var statuses = ViewBag.Statuses as Array ?? Array.Empty<ApplicationStatus>();
    var selectedJobPostingId = ViewBag.SelectedJobPostingId as int?;
    var selectedStatus = ViewBag.SelectedStatus as ApplicationStatus?;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-users me-2 text-primary"></i>Job Applications
                </h2>
            </div>

            <!-- Filters -->
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Filter by Job</label>
                            <select name="jobPostingId" class="form-select">
                                <option value="">All Jobs</option>
                                @foreach (var job in jobPostings)
                                {
                                    <option value="@job.Id" selected="@(selectedJobPostingId == job.Id)">@job.Title</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Filter by Status</label>
                            <select name="status" class="form-select">
                                <option value="">All Statuses</option>
                                @foreach (ApplicationStatus status in statuses)
                                {
                                    <option value="@status" selected="@(selectedStatus == status)">@status</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-filter me-1"></i>Apply Filters
                            </button>
                            <a href="@Url.Action("CompanyApplications")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Applications Found</h4>
                        <p class="text-muted">No applications match your current filters.</p>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Applicant</th>
                                        <th>Job Title</th>
                                        <th>Applied Date</th>
                                        <th>Status</th>
                                        <th>Interview Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var application in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@application.JobSeeker?.User?.FirstName @application.JobSeeker?.User?.LastName</strong>
                                                <br>
                                                <small class="text-muted">@application.JobSeeker?.User?.Email</small>
                                            </td>
                                            <td>@application.JobPosting?.Title</td>
                                            <td>@application.AppliedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge bg-@GetStatusBadgeClass(application.Status)">
                                                    @application.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (application.InterviewDate.HasValue)
                                                {
                                                    @application.InterviewDate.Value.ToString("MMM dd, yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not scheduled</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = application.Id })"
                                                   class="btn btn-sm btn-outline-primary me-1">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("UpdateStatus", new { id = application.Id })"
                                                   class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(ApplicationStatus status)
    {
        return status switch
        {
            ApplicationStatus.Submitted => "secondary",
            ApplicationStatus.UnderReview => "info",
            ApplicationStatus.InterviewScheduled => "warning",
            ApplicationStatus.Accepted => "success",
            ApplicationStatus.Rejected => "danger",
            ApplicationStatus.Withdrawn => "dark",
            _ => "secondary"
        };
    }
}