@model TalentLink.Models.CompanyEditViewModel
@{
    ViewData["Title"] = "Company Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* --- Base Styles --- */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            color: #333;
            background: linear-gradient(135deg, #eef2f7 0%, #d6e0f0 100%);
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -15px;
        }

        .justify-content-center {
            justify-content: center;
        }

        .col-md-8 {
            flex: 0 0 66.666667%;
            max-width: 66.666667%;
            padding: 0 15px;
        }

        /* --- Animated Website Name Section --- */
        .animated-section {
            position: relative;
            margin-bottom: 3rem;
        }

        .website-title {
            font-size: 3rem;
            font-weight: 800;
            text-align: center;
            margin-top: 2rem;
            letter-spacing: 2px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: glowText 3s ease-in-out infinite alternate;
            position: relative;
            z-index: 2;
        }

            .website-title::after {
                content: "TalentLink";
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -40%);
                font-size: 4rem;
                font-weight: 900;
                opacity: 0.03;
                color: #667eea;
                z-index: 1;
                white-space: nowrap;
                pointer-events: none;
                animation: pulseShadow 6s infinite alternate;
            }

        @@keyframes glowText {
            0%

        {
            text-shadow: 0 0 5px #667eea, 0 0 10px #667eea;
            transform: translateY(0);
        }

        50% {
            text-shadow: 0 0 15px #764ba2, 0 0 25px #764ba2;
            transform: translateY(-3px);
        }

        100% {
            text-shadow: 0 0 5px #667eea, 0 0 10px #667eea;
            transform: translateY(0);
        }

        }

        @@keyframes pulseShadow {
            0%

        {
            opacity: 0.03;
            transform: translate(-50%, -40%) scale(1);
        }

        100% {
            opacity: 0.06;
            transform: translate(-50%, -40%) scale(1.05);
        }

        }

        /* --- Profile Card --- */
        .profile-card {
            background: linear-gradient(145deg, #ffffff, #f7f9fc);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
            overflow: hidden;
            transition: all 0.4s ease;
            margin-bottom: 2rem;
            padding: 2rem;
            position: relative;
        }

            .profile-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 25px 50px rgba(0,0,0,0.15);
            }

        .profile-header-bg {
            height: 180px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            position: relative;
            margin: -2rem -2rem 2rem -2rem;
            border-radius: 20px 20px 0 0;
            overflow: hidden;
        }

            .profile-header-bg::after {
                content: '';
                position: absolute;
                width: 200%;
                height: 200%;
                top: -50%;
                left: -50%;
                background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
                animation: rotateGlow 8s linear infinite;
            }

        .profile-img {
            width: 160px;
            height: 160px;
            object-fit: cover;
            margin-top: -80px;
            position: relative;
            z-index: 2;
            border: 5px solid white;
            border-radius: 50%;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            transition: all 0.3s ease;
            animation: floatImg 3s ease-in-out infinite alternate;
        }

            .profile-img:hover {
                transform: scale(1.1);
            }

        .text-gradient {
            background: linear-gradient(90deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .detail-card {
            background: #ffffff;
            border-radius: 16px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            position: relative;
            height: 100%;
            margin-bottom: 1.5rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

            .detail-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.1);
            }

        .detail-icon {
            position: absolute;
            top: -15px;
            right: 15px;
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .detail-card:hover .detail-icon {
            transform: scale(1.2) rotate(15deg);
        }

        .btn {
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-block;
            text-decoration: none;
            cursor: pointer;
            border: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
        }

            .btn-primary:hover {
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 8px 25px rgba(102,126,234,0.4);
            }

        .btn-outline-primary {
            border: 2px solid #667eea;
            color: #667eea;
            background: transparent;
            padding: 0.25rem 0.75rem;
            font-size: 0.85rem;
            border-radius: 50px;
        }

            .btn-outline-primary:hover {
                background: #667eea;
                color: white;
                transform: translateY(-3px) scale(1.05);
            }

        .btn-close-position {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 42px;
            height: 42px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            text-decoration: none;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            z-index: 10;
        }

            .btn-close-position:hover {
                background: #f8f9fa;
                transform: rotate(90deg) scale(1.1);
                color: #667eea;
            }

        /* Animations */
        @@keyframes floatImg {
            0%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }

        100% {
            transform: translateY(0);
        }

        }

        @@keyframes rotateGlow {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes slideInLeft {
            from

        {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        @@keyframes slideInRight {
            from

        {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        .animated-fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }

        .animated-slide-in-left {
            animation: slideInLeft 0.6s ease-out forwards;
            opacity: 0;
        }

        .animated-slide-in-right {
            animation: slideInRight 0.6s ease-out forwards;
            opacity: 0;
        }

        .delay-1 {
            animation-delay: 0.1s;
        }

        .delay-2 {
            animation-delay: 0.2s;
        }

        .delay-3 {
            animation-delay: 0.3s;
        }

        .delay-4 {
            animation-delay: 0.4s;
        }

        .delay-5 {
            animation-delay: 0.5s;
        }

        .delay-6 {
            animation-delay: 0.6s;
        }

        .text-secondary {
            color: #6c757d !important;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .text-muted {
            color: #6c757d !important;
        }

        @@media (max-width: 768px) {
            .col-md-8

        {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .profile-header-bg {
            height: 140px;
        }

        .profile-img {
            width: 120px;
            height: 120px;
            margin-top: -60px;
        }

        .detail-card {
            padding: 1.25rem;
        }

        .btn-close-position {
            top: 15px;
            right: 15px;
            width: 36px;
            height: 36px;
        }

        .flex-md-row {
            flex-direction: column !important;
            text-align: center;
        }

        .text-md-start {
            text-align: center !important;
        }

        .justify-content-md-start {
            justify-content: center !important;
        }

        .me-md-4 {
            margin-right: 0 !important;
            margin-bottom: 1rem;
        }

        }
    </style>
</head>
<body>
    <div class="container animated-section">
        <!-- Animated Website Name -->
        <div class="website-title">TalentLink</div>

        <div class="row justify-content-center animated-fade-in">
            <div class="col-md-8">
                <div class="card profile-card shadow-lg border-0 rounded-4">
                    <div class="profile-header-bg"></div>

                    <div class="position-relative pt-5">
                        <a href="javascript:history.back()" class="btn-close-position">
                            <i class="fas fa-times"></i>
                        </a>

                        <div class="px-4">
                            <div class="d-flex flex-column flex-md-row align-items-center text-center text-md-start mb-4">
                                <div class="position-relative me-md-4 mb-3 mb-md-0">
                                    <img src="@(!string.IsNullOrEmpty(Model.Image) ? Model.Image : Url.Content("~/images/profile.jpg"))"
                                         alt="Company Logo"
                                         class="profile-img">
                                </div>

                                <div class="flex-grow-1">
                                    <h2 class="mb-1 fw-bold text-gradient">@Model.CompanyName</h2>
                                    <div class="d-flex flex-column flex-md-row align-items-center justify-content-center justify-content-md-start">
                                        <p class="text-muted mb-1 me-md-3"><i class="fas fa-globe me-2"></i>@Model.Website</p>
                                        <p class="text-muted mb-1"><i class="fas fa-industry me-2"></i>@Model.Industry</p>
                                    </div>
                                    <div class="mt-3">
                                        <a asp-action="EditProfile" asp-route-userId="@Model.Id"
                                           class="btn btn-primary">
                                            <i class="fas fa-edit me-2"></i> Edit Profile
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4" />

                            <div class="row text-start">
                                <div class="col-md-6 mb-3 animated-slide-in-left delay-1">
                                    <div class="detail-card h-100">
                                        <div class="detail-icon"><i class="fas fa-user"></i></div>
                                        <h6 class="text-secondary">Contact Person</h6>
                                        <p>@Model.FirstName @Model.LastName</p>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3 animated-slide-in-right delay-2">
                                    <div class="detail-card h-100">
                                        <div class="detail-icon"><i class="fas fa-phone"></i></div>
                                        <h6 class="text-secondary">Phone Number</h6>
                                        <p>@Model.PhoneNumber</p>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3 animated-slide-in-left delay-3">
                                    <div class="detail-card h-100">
                                        <div class="detail-icon"><i class="fas fa-map-marker-alt"></i></div>
                                        <h6 class="text-secondary">Address</h6>
                                        <p>@(Model.Address ?? "-")</p>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3 animated-slide-in-right delay-4">
                                    <div class="detail-card h-100">
                                        <div class="detail-icon"><i class="fas fa-building"></i></div>
                                        <h6 class="text-secondary">Industry</h6>
                                        <p>@Model.Industry</p>
                                    </div>
                                </div>

                                <div class="col-12 mb-3 animated-slide-in-left delay-5">
                                    <div class="detail-card h-100">
                                        <div class="detail-icon"><i class="fas fa-file-alt"></i></div>
                                        <h6 class="text-secondary">Company Description</h6>
                                        <p>@(Model.Description ?? "-")</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.detail-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-8px)';
                    this.style.boxShadow = '0 15px 30px rgba(0,0,0,0.1)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = '';
                    this.style.boxShadow = '0 5px 15px rgba(0,0,0,0.05)';
                });
            });
        });
    </script>
</body>
</html>
