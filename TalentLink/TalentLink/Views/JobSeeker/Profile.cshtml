@model dynamic
@{
    ViewData["Title"] = "Job Seeker Profile";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Card -->
            <div class="card shadow-lg p-4 border-0 rounded-4">

                <!-- Profile Header -->
                <div class="d-flex align-items-center mb-4">
                    <img src="@(!string.IsNullOrEmpty(Model.Image) ? Model.Image : Url.Content("~/images/profile.jpg"))"
                         alt="Profile Image"
                         class="rounded-circle me-4 border border-3 border-primary"
                         style="width: 120px; height: 120px; object-fit: cover;">

                    <div>
                        <h3 class="mb-1">@Model.FirstName @Model.LastName</h3>
                        <p class="text-muted mb-0">@Model.Email</p>
                        <p class="text-muted mb-0">@Model.PhoneNumber</p>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- Profile Details Grid -->
                <div class="row text-start">
                    <div class="col-md-6 mb-3">
                        <h6 class="text-secondary">Skills</h6>
                        <p>@(Model.Skills ?? "-")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6 class="text-secondary">Experience</h6>
                        <p>@(Model.Experience ?? "-")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6 class="text-secondary">Education</h6>
                        <p>@(Model.Education ?? "-")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6 class="text-secondary">Address</h6>
                        <p>@(Model.Address ?? "-")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6 class="text-secondary">Date of Birth</h6>
                        <p>@(Model.DateOfBirth != null ? ((DateTime)Model.DateOfBirth).ToString("dd MMM yyyy") : "-")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <h6 class="text-secondary">Resume</h6>
                        @if (!string.IsNullOrEmpty(Model.CVFilePath))
                        {
                            <a href="@Model.CVFilePath" target="_blank" class="btn btn-outline-primary btn-sm">View PDF</a>
                        }
                        else
                        {
                            <span class="text-muted">Not uploaded</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: #ffffff;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

    h6 {
        font-weight: 600;
        font-size: 0.9rem;
        color: #6c757d;
    }

    .card p {
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
        color: #495057;
    }

    a.btn-outline-primary {
        font-size: 0.85rem;
        padding: 0.25rem 0.75rem;
    }
</style>
