@model JobSeekerEditViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg p-4 border-0 rounded-4">
                <h3 class="mb-4">Edit Profile</h3>

                <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Skills" class="form-label"></label>
                        <textarea asp-for="Skills" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Experience" class="form-label"></label>
                        <textarea asp-for="Experience" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Education" class="form-label"></label>
                        <textarea asp-for="Education" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Profile Image</label><br />
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Model.Image" alt="Profile" class="rounded-circle mb-2" style="width:100px;height:100px;object-fit:cover;" />
                        }
                        <input asp-for="ImageFile" type="file" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Resume (PDF)</label><br />
                        @if (!string.IsNullOrEmpty(Model.CVFilePath))
                        {
                            <a href="@Model.CVFilePath" target="_blank">Current Resume</a>
                        
                            <br />
                        }
                        <input asp-for="CVFile" type="file" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Profile" asp-route-userId="@Model.Id" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
