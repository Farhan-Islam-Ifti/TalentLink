@model TalentLink.Models.JobApplication

@{
    ViewData["Title"] = "Application Details";
}
@section Styles {
    <link rel="stylesheet" href="~/css/my-applications.css" asp-append-version="true" />
}

<div class="container mt-5 application-details-page">
    <div class="card shadow-lg p-4 animate__animated animate__fadeInUp soft-card">
        <h3 class="fw-bold mb-3"><i class="fas fa-file-alt me-2"></i> Application Details</h3>
        <hr />

        <h5 class="mb-2">@Model.JobPosting.Title</h5>
        <p class="text-muted"><i class="fas fa-building me-1"></i>@Model.JobPosting.Company?.CompanyName</p>

        <div class="mb-3">
            <span class="badge bg-gradient px-3 py-2">@Model.Status</span>
            <span class="ms-3 text-muted">Applied: @Model.AppliedDate.ToString("MMM dd, yyyy")</span>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <p><i class="fas fa-map-marker-alt me-2"></i>@Model.JobPosting.Location</p>
            </div>
            <div class="col-md-6">
                @if (Model.JobPosting.Salary.HasValue)
                {
                    <p class="text-success"><i class="fas fa-money-bill-wave me-2"></i>@Model.JobPosting.Salary.Value.ToString("C")</p>
                }
            </div>
        </div>

        <div class="mb-3">
            <h6 class="fw-bold">Cover Letter:</h6>
            <p>@Model.CoverLetter</p>
        </div>

        <div class="mb-3">
            <h6 class="fw-bold">Job Description:</h6>
            <p>@Model.JobPosting.Description</p>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a asp-action="MyApplications" asp-controller="JobApplicationMvc" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Applications
            </a>
            <a asp-action="Details" asp-controller="JobPostingMvc" asp-route-id="@Model.JobPostingId"
               class="btn btn-gradient">
                <i class="fas fa-briefcase me-1"></i> View Job Posting
            </a>
        </div>
    </div>
</div>
