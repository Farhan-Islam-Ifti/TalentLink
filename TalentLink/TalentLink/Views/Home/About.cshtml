@section Scripts {
    <script>
        // AOS already initialized in layout; add counters and small interactions here.

        // Counter animation - uses IntersectionObserver to trigger once visible
        (function () {
            const counters = document.querySelectorAll('.stat-number');
            if (!('IntersectionObserver' in window)) { counters.forEach(c => c.innerText = c.dataset.count); return; }

            const io = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (!entry.isIntersecting) return;
                    const el = entry.target;
                    const target = parseInt(el.getAttribute('data-count') || '0', 10);
                    const duration = 1600;
                    let start = null;
                    function step(ts) {
                        if (!start) start = ts;
                        const progress = Math.min((ts - start) / duration, 1);
                        el.innerText = Math.floor(progress * target).toLocaleString();
                        if (progress < 1) requestAnimationFrame(step);
                        else el.innerText = target.toLocaleString();
                    }
                    requestAnimationFrame(step);
                    io.unobserve(el);
                });
            }, { threshold: 0.4 });

            counters.forEach(c => io.observe(c));
        })();

        // small effect: fade in testimonials using simple class toggle (AOS handles most)
        document.addEventListener('DOMContentLoaded', function () {
            const t = document.querySelectorAll('.testimonial-card');
            t.forEach((el, i) => {
                el.style.transition = 'transform .5s ease, opacity .5s ease';
                el.style.transform = 'translateY(10px)';
                el.style.opacity = '0';
                setTimeout(() => { el.style.transform = ''; el.style.opacity = '1'; }, 200 + i * 150);
            });
        });
    </script>
}
